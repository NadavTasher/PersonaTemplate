{
  "name": "Persona",
  "replacements": [
    {
      "name": "name",
      "description": "App Name",
      "pattern": ".+",
      "needle": "AppName",
      "haystacks": [
        "index.html",
        "resources/manifest.json"
      ]
    },
    {
      "name": "personal",
      "description": "Your Name",
      "pattern": ".+",
      "needle": "YourName",
      "haystacks": [
        "layouts/template.html"
      ]
    },
    {
      "name": "description",
      "description": "App Description",
      "pattern": ".+",
      "needle": "AppDescription",
      "haystacks": [
        "index.html",
        "resources/manifest.json"
      ]
    },
    {
      "name": "theme",
      "description": "App Color",
      "pattern": "(#([0-9]|[A-F]|[a-f]){6})",
      "needle": "#FFFFFF",
      "haystacks": [
        "index.html",
        "resources/manifest.json",
        "resources/offline.html",
        "stylesheets/app.css"
      ]
    },
    {
      "name": "layout",
      "description": "App Layout",
      "pattern": ".+",
      "needle": "<!--App Layout-->",
      "haystacks": [
        "layouts/app.html"
      ]
    },
    {
      "name": "load",
      "description": "App Load Code",
      "pattern": ".+",
      "needle": "// App Load Code",
      "haystacks": [
        "scripts/frontend/app.js"
      ]
    },
    {
      "name": "code",
      "description": "App Code",
      "pattern": ".+",
      "needle": "// App Code",
      "haystacks": [
        "scripts/frontend/app.js"
      ]
    },
    {
      "name": "stylesheet",
      "description": "App Style",
      "pattern": ".+",
      "needle": "/* App Style */",
      "haystacks": [
        "stylesheets/app.css",
        "resources/offline.html"
      ]
    }
  ]
}